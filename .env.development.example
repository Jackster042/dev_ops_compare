# Development Environment Variables
# Copy this file to .env.development and fill in your values

# Database Configuration (Neon Local)
# Neon Local runs in Docker and uses standard Postgres connection string
DATABASE_URL=postgres://neon:npg@neon-local:5432/neondb

# Application Configuration
NODE_ENV=development
PORT=3000

# Arcjet Security (optional - get your key from https://arcjet.com)
ARCJET_KEY=your_arcjet_key_here

# Required: Neon Cloud API credentials for Neon Local
# Get these from your Neon Cloud dashboard: https://console.neon.tech
NEON_API_KEY=your_neon_api_key_here
NEON_PROJECT_ID=your_neon_project_id_here

# Optional: Specify parent branch for ephemeral branches
# If not set, Neon Local will use the main branch
PARENT_BRANCH_ID=

# Note: Neon Local requires NEON_API_KEY and NEON_PROJECT_ID to connect to Neon Cloud
# and create ephemeral branches for local development
